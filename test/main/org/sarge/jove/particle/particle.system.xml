<snow
	max-particles="1"
	creation-rate="2"
	age-limit="3"
>
	<emitter class="org.sarge.jove.particle.RectangleEmitter">
		<box>
			<min>-1, -1, -1</min>
			<max>+1, +1, +1</max>
		</box>
	</emitter>
	
	<direction-factory class="org.sarge.jove.particle.LiteralDirectionFactory">
		<dir>0, -0.01, 0</dir>
	</direction-factory>
	
	<colour-factory class="org.sarge.jove.particle.LiteralColourFactory">
		<col>1, 1, 1, 1</col>
	</colour-factory>
	
	<renderer class="org.sarge.jove.particle.PointSpriteParticleRenderer" />
	
	<influence class="org.sarge.jove.particle.VectorInfluence">
		<vec>1, 2, 3</vec>
	</influence>
</snow>
